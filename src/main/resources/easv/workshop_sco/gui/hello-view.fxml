<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" prefHeight="777.0" prefWidth="753.0" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.workshop_sco.gui.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TextField fx:id="searchField" maxWidth="200.0" prefHeight="30.0" promptText="search" />
      <TableView fx:id="employeeTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="162.0" text="Name" />
          <TableColumn fx:id="salaryColumn" prefWidth="142.0" text="Salary" />
          <TableColumn fx:id="onLeaveColumn" prefWidth="195.0" text="On_leave" />
          <TableColumn fx:id="phoneNumberColumn" prefWidth="213.0" text="Phone number" />
        </columns>
      </TableView>
      <Button mnemonicParsing="false" onAction="#addNewEmployee" text="Add new Employee" />
      <Button mnemonicParsing="false" onAction="#editEmployee" text="Edit Employee" />
   </children>
</VBox>
